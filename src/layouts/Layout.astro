---
import Header from '../components/Header';
import Footer from '../components/Footer.astro';
import { ViewTransitions } from 'astro:transitions';

interface Props {
  title: string;
  keywords?: string;
}

const { title, keywords } = Astro.props;
const defaultKeywords =
  'implante coclear, hipoacusia, sordera, sordo, hipoacúsico, hipoacusia súbita, sordera súbita, pérdida auditiva, discapacidad auditiva, discapacidad, audición, cochlear, medel, podcast';
---

<!doctype html>
<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta
      name='description'
      content='La pérdida auditiva, algo que muchos vivimos pero que pocos entienden. Te invito a conocerla desde adentro, desde otro punto de vista. Entrá y elegí vos mismo por donde empezar.'
    />
    <meta name='viewport' content='width=device-width' />
    <meta name='keywords' content={keywords ? keywords : defaultKeywords} />
    <link rel='icon' type='image/svg+xml' href='/logo.png' />
    <link rel='preconnect' href='https://fonts.googleapis.com' />
    <link rel='preconnect' href='https://fonts.gstatic.com' crossorigin />
    <link
      href='https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap'
      rel='stylesheet'
    />
    <link
      href='https://fonts.googleapis.com/css?family=Otomanopee One'
      rel='stylesheet'
    />
    <meta name='generator' content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <Header client:idle />
    <slot />
    <Footer />
    <ViewTransitions />
  </body>
  <style is:global>
    :root {
      --background-color: #fff5e5;
      --blue: #83a9f0;
      --red: #df5e3d;
      --yellow: #f9b702;
      --pink: #e86985;
      --ft-title: 'Otomanopee One';
      --ft-basic: 'Montserrat';
    }
    html {
      font-family: var(--ft-basic), sans-serif;
      background: var(--background-color);
      color: black;
    }
    * {
      box-sizing: border-box;
    }
    body {
      margin: 0;
      padding: 0;
      width: 100vw;
      min-height: 100vh;
      overflow-x: hidden;
    }
  </style>
</html>
