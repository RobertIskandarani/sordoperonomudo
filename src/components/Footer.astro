---
import CopyrightIcon from './icons/CopyrightIcon';
import WaveFloor from './WaveFloor';
import LinksList from './LinksList.astro';
---

<footer
  class='w-screen h-40 z-0 flex flex-col justify-start items-center bg-[var(--background-color)]'
>
  <WaveFloor color={'var(--background-color)'} client:idle />
  <section
    class='w-[85%] flex flex-col gap-4 md:flex-row justify-between items-center pb-8'
  >
    <img src='/assets/logotipo.png' alt='Sordo pero no mudo' width={120} height="auto" />
    <LinksList />
  </section>
  <section class='flex flex-row gap-5 items-center'>
    <CopyrightIcon className=' w-4 sm:w-6' />
    <h1 class='py-4 text-xs sm:text-base ft-title transition-all duration-300'>
      2024 - SORDO PERO NO MUDO
    </h1>
    <span class="w-px bg-black mx-1 h-4"></span>
    <a href="https://portfolio-robert-iskandarani.vercel.app/">Hecho por <span class="font-bold">Robert Iskandarani</span></a>
  </section>
</footer>
