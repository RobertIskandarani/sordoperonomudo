---
import episodios from '../data/Episodios.json';
import Episodios from './Episodios.astro';

const masEscuchados = episodios.filter((episodio) =>
  ['01', '02', '04', '08', '12', '10', '15', '26', '03'].includes(episodio.numero)
).sort(() => Math.random() - 0.5).slice(0, 3);

export const prerender = false;
---

<section
  class='w-full flex flex-col items-center justify-start gap-20 py-20 bg-[url(/assets/fondo2.png)] bg-cover bg-no-repeat bg-start'
>
  <h1
    class='text-2xl text-center md:text-6xl text-black ft-title transition-all duration-300'
  >
    M√ÅS ESCUCHADOS
  </h1>
  <Episodios episodios={masEscuchados} />
</section>
