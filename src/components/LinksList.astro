---
import AmazonMusicIcon from './icons/AmazonMusicIcon';
import AppleMusicIcon from './icons/AppleMusicIcon';
import GooglePodcastIcon from './icons/GooglePodcastIcon';
import SpotifyIcon from './icons/SpotifyIcon';
import YoutubeIcon from './icons/YoutubeIcon';
---

<ul class='flex flex-row gap-8 flex-wrap'>
  <li class='flex'>
    <a
      href='https://open.spotify.com/show/6zYhA2pOjN0pxW2XcC8eM5'
      class='rounded-full'
    >
      <SpotifyIcon
        className='w-8 h-8 sm:w-10 sm:h-10 md:w-12 md:h-12 transition-all duration-300'
      />
    </a>
  </li>
  <li class='flex'>
    <a
      class='rounded-full'
      href='https://www.youtube.com/playlist?list=PL4LhE_GfN8cMKKEIgU7KxNVdaUN0MsVhF'
    >
      <YoutubeIcon
        className='w-8 h-8 sm:w-10 sm:h-10 md:w-12 md:h-12 transition-all duration-300'
      /></a
    >
    <li class='flex'>
      <a
        class='rounded-full'
        href='https://podcasts.google.com/feed/aHR0cHM6Ly9hbmNob3IuZm0vcy9lMjFkZDMxOC9wb2RjYXN0L3Jzcw'
      >
        <GooglePodcastIcon
          className='w-8 h-8 sm:w-10 sm:h-10 md:w-12 md:h-12 transition-all duration-300'
        /></a
      >
      <li class='flex'>
        <a
          class='rounded-full'
          href='https://podcasts.apple.com/us/podcast/sordo-pero-no-mudo-hablando-desde-mi-hipoacusia/id1695485167'
        >
          <AppleMusicIcon
            className='w-8 h-8 sm:w-10 sm:h-10 md:w-12 md:h-12 transition-all duration-300'
          /></a
        >
        <li class='flex'>
          <a
            class='rounded-full'
            href='https://music.amazon.es/podcasts/21b84a7f-8fef-4f25-817e-d06f1365d55d/sordo-pero-no-mudo-hablando-desde-mi-hipoacusia'
          >
            <AmazonMusicIcon
              className='w-8 h-8 sm:w-10 sm:h-10 md:w-12 md:h-12 transition-all duration-300'
            /></a
          >
        </li>
      </li>
    </li>
  </li>
</ul>
