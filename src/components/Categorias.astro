---
import Carrousel from './Carrousel';
import WaveFloor from './WaveFloor';
import todas_las_categorias from '../data/Categorias.json';

import {type Categoria} from '../types/Types';

interface Props {
  categorias?: Categoria[];
}

export const prerender = false;

const { categorias = todas_las_categorias } = Astro.props;
---

<section id='categorías' class='w-full relative'>
  <WaveFloor
    color='var(--background-color)'
    className='rotate-180 -scale-x-100 absolute -top-px'
    type={2}
    client:idle
  />
  <article class='w-full bg-[var(--yellow)] flex justify-center'>
    <div class='w-[85%] flex flex-col gap-10 justify-center py-32'>
      <div class='flex flex-col gap-4'>
        <h1
          class='text-2xl text-center md:text-6xl text-black ft-title transition-all duration-300'
        >
          CATEGORÍAS
        </h1>
        <h2
          class='text-sm text-center md:text-2xl text-black ft-title transition-all duration-300'
        >
          escuchá la que te interese
        </h2>
      </div>
      <Carrousel client:idle items={categorias} />
    </div>
  </article>
  <WaveFloor
    color='var(--background-color)'
    shadow={false}
    type={2}
    className='absolute -bottom-px z-[2] w-screen'
    client:idle
  />
</section>
